{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Project",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "type": "shell",
            "command": [
                "docker", "run",
                "--rm",
                "-v$(pwd):$(pwd)",
                "-w$(pwd)",
                "-p5173:5173",
                "node:20-alpine",
                "npm", "run", "dev"
            ]
        }
    ]
}